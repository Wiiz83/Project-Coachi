<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".GUI.Accueil.AnimalPerso"
    tools:showIn="@layout/activity_animalperso">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btJouer"
                style="@android:style/Widget.ImageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/jouer" />

            <ImageButton
                android:id="@+id/btNourir"
                style="@android:style/Widget.ImageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/nourir" />

            <ImageButton
                android:id="@+id/btAbreuver"
                style="@android:style/Widget.ImageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/abreuver" />

            <ImageButton
                android:id="@+id/btSoigner"
                style="@android:style/Widget.ImageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/soigner" />

            <ImageButton
                android:id="@+id/btLaver"
                style="@android:style/Widget.ImageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/laver" />

            <ImageButton
                android:id="@+id/btSortir"
                style="@android:style/Widget.ImageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/sortir" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llUnity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNom"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Nom : "
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvAge"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Age : "
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvEnergie"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Energie"
                android:textAlignment="center"
                android:textSize="14sp" />

            <ProgressBar
                android:id="@+id/pbEnergie"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:max="100" />

            <TextView
                android:id="@+id/tvEnergieP"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="X / 100"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSante"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Sante"
                android:textAlignment="center" />

            <ProgressBar
                android:id="@+id/pbSante"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:max="100" />

            <TextView
                android:id="@+id/tvSanteP"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="X / 100"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMoral"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Moral"
                android:textAlignment="center" />

            <ProgressBar
                android:id="@+id/pbMoral"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:max="100" />

            <TextView
                android:id="@+id/tvMoralP"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="X / 100"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEtat"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/attention" />

            <TextView
                android:id="@+id/tvEtat"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Etat du chien : AssoiffÃ©"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btAgir"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Agir"
                android:textSize="7sp" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>